class Student:
    def __init__(self,Name,cgpa,branch):
        self.Name=Name
        self.cgpa=cgpa
        self.branch=branch
        self.isPlaced=False
    def isEligible(self,object):
        if (self.cgpa >= object.requiredcgpa) and (self.branch==object.branches) and (self.isPlaced==False):
            print('Student {} is eligible '.format(self.Name),end=' ')
            print('Company {}'.format(self.name))
        else:
            print('Student {} is not eligible '.format(self.Name),end=' ')

    def apply(self,object):
        students=[]
        students.append(object)

    def getsPlaced(self):
        self.isPlaced=True


class Company:
    def __init__(self,Name,requiredcgpa,branches,positionOpen):
        self.name=Name
        self.requiredcgpa=requiredcgpa
        self.branches=branches
        self.positionOpen=positionOpen
        self.appliedStudents=[]
        self.applicationOpen=True

    def hireStudents(self):
        print('The company {} has hired the following students'.format(self.name))
