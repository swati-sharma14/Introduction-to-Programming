def sort1(element):
    return element.cgpas

n=int(input("Enter number of students(n>=5): "))
list1=[]
for i in range(0,n):
    students=input('Enter name of Student {}: '.format(i+1))
    cgpas=input('Enter cgpa of Student {}: '.format(i+1))
    branchs=input('Enter branch of Student {}: '.format(i+1))
    details=Student(students,cgpas,branchs)
    list1.append(details)

list2=[]
c=int(input("Enter number of companies (n>=2): "))
for i in range(0,c):
    companys=input('Enter name of Company {}: '.format(i+1))
    requiredcgpas=input('Enter required cgpa of Company {}: '.format(i+1))
    brancheseligible=[str(i) for i in input('Enter space seperated branches of Company {}: '.format(i+1)).split()]
    positionOpened=int(input('Enter the number of positions opened in Company {}: '.format(i+1)))
    companydetails=Company(companys,requiredcgpas,brancheseligible,positionOpened)
    list2.append(companydetails)

for i in list1:
    for j in range(0,len(list2)):
        i.isEligible(list2[j])
